{
  "name": "docsify-serve",
  "description": "Enhanced development server for Docsify",
  "type": "module",
  "bin": "./dist/index.cjs",
  "scripts": {
    "build": "tsup src/index.ts --out-dir lib --clean",
    "dev": "tsx src/index.ts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "dependencies": {
    "commander": "^11.1.0",
    "live-server": "^1.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@tsconfig/node20": "^20.1.2",
    "@types/connect": "^3.4.38",
    "@types/live-server": "^1.2.3",
    "@types/node": "^20.10.8",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "prettier-plugin-packagejson": "^2.4.9",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0"
  },
  "packageManager": "pnpm@9.0.0-alpha.0+sha256.73ada1a82ae5a62c3da44e4841e56d471a5f52a48590b212ea04466923689e3b",
  "volta": {
    "node": "20.10.0"
  }
}
